<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="org.seasar.doma.extension.domax.property.ProjectPropertyPage"
            id="org.seasar.doma.extension.domax.properties.samplePropertyPage"
            name="Doma">
         <enabledWhen>
            <and>
               <adapt
                     type="org.eclipse.core.resources.IProject">
               </adapt>
               <instanceof
                     value="org.eclipse.jdt.core.IJavaProject">
               </instanceof>
               <count
                     value="1">
               </count>
            </and>
         </enabledWhen>
      </page>
   </extension>
   <extension
         id="sqlFileBuilder"
         name="Domax Project SqlFile Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="true"
            hasNature="true">
         <run
               class="org.seasar.doma.extension.domax.builder.SqlFileBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="domaxNature"
         name="Domax Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.seasar.doma.extension.domax.DomaxNature">
         </run>
      </runtime>
      <builder
            id="org.seasar.doma.extension.domax.sqlFileBuilder">
      </builder>
   </extension>
   <extension
         id="xmlProblem"
         name="XML Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.seasar.doma.extension.domax.category"
            id="org.seasar.doma.extension.domax.commands.jumpToDao"
            name="Jump to Dao">
      </command>
      <command
            categoryId="org.seasar.doma.extension.domax.category"
            id="org.seasar.doma.extension.domax.commands.jumpToSqlFile"
            name="Jump to Sql File">
      </command>
      <category
            id="org.seasar.doma.extension.domax.category"
            name="Doma">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.seasar.doma.extension.domax.handler.SqlPopupToJavaEditorHandler"
            commandId="org.seasar.doma.extension.domax.commands.jumpToDao">
         <activeWhen>
            <with
                  variable="selection">
               <count
                     value="1">
               </count>
               <iterate>
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           property="org.eclipse.core.resources.extension"
                           value="sql">
                     </test>
                  </adapt>
               </iterate>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.seasar.doma.extension.domax.handler.SqlEditorToJavaEditorHandler"
            commandId="org.seasar.doma.extension.domax.commands.jumpToDao">
         <activeWhen>
            <and>
               <with
                     variable="activeEditorId">
                  <equals
                        value="org.eclipse.ui.DefaultTextEditor">
                  </equals>
               </with>
               <with
                     variable="selection">
                  <iterate
                        operator="or">
                     <instanceof
                           value="org.eclipse.jface.text.TextSelection">
                     </instanceof>
                  </iterate>
               </with>
            </and>
         </activeWhen>
      </handler>
      <handler
            class="org.seasar.doma.extension.domax.handler.JavaEditorToSqlEditorHandler"
            commandId="org.seasar.doma.extension.domax.commands.jumpToSqlFile">
         <activeWhen>
            <and>
               <with
                     variable="activeEditorId">
                  <equals
                        value="org.eclipse.jdt.ui.CompilationUnitEditor">
                  </equals>
               </with>
               <with
                     variable="selection">
                  <iterate
                        operator="or">
                     <instanceof
                           value="org.eclipse.jface.text.TextSelection">
                     </instanceof>
                  </iterate>
               </with>
            </and>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.seasar.doma.extension.domax.commands.jumpToDao"
            contextId="org.eclipse.ui.textEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+0">
      </key>
      <key
            commandId="org.seasar.doma.extension.domax.commands.jumpToSqlFile"
            contextId="org.eclipse.jdt.ui.javaEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+0">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="menu"
               label="Doma">
            <command
                  commandId="org.seasar.doma.extension.domax.commands.jumpToDao"
                  label="Jump to Dao"
                  mnemonic="J"
                  style="push">
               <visibleWhen>
                  <with
                        variable="selection">
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <adapt
                              type="org.eclipse.core.resources.IFile">
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="sql">
                           </test>
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:#TextEditorContext?after=additions">
  
         <menu
               id="menu"
               label="Doma">
            <command
                  commandId="org.seasar.doma.extension.domax.commands.jumpToDao"
                  label="Jump to Dao"
                  mnemonic="J"
                  style="push">
               <visibleWhen>
                  <and>
                     <with
                           variable="activeEditorId">
                        <equals
                              value="org.eclipse.ui.DefaultTextEditor">
                        </equals>
                     </with>
                     <with
                           variable="selection">
                        <iterate
                              operator="or">
                           <instanceof
                                 value="org.eclipse.jface.text.TextSelection">
                           </instanceof>
                        </iterate>
                     </with>
                  </and>
               </visibleWhen>
            </command>
         </menu>    </menuContribution>
      <menuContribution
            locationURI="popup:#CompilationUnitEditorContext?after=additions">
         <menu
               id="menu"
               label="Doma">
            <command
                  commandId="org.seasar.doma.extension.domax.commands.jumpToSqlFile"
                  label="Jump to SQL File"
                  mnemonic="J"
                  style="push">
               <visibleWhen>
                  <and>
                     <with
                           variable="activeEditorId">
                        <equals
                              value="org.eclipse.jdt.ui.CompilationUnitEditor">
                        </equals>
                     </with>
                     <with
                           variable="selection">
                        <iterate
                              operator="or">
                           <instanceof
                                 value="org.eclipse.jface.text.TextSelection">
                           </instanceof>
                        </iterate>
                     </with>
                  </and>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
</plugin>
